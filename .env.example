# Unitasa Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# Razorpay Payment Integration - Use PRODUCTION keys in production
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_live_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_live_razorpay_webhook_secret

# Wise Payment Integration (Optional)
WISE_API_KEY=your_wise_api_key_here
WISE_PROFILE_ID=your_wise_profile_id
WISE_WEBHOOK_SECRET=your_wise_webhook_secret_here
WISE_ENVIRONMENT=sandbox

# Email Configuration
FROM_EMAIL=support@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Frontend URL (used for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Facebook OAuth Configuration
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# Twitter/X OAuth Configuration
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_REDIRECT_URI=http://localhost:3000/auth/twitter/callback
