# Unitasa Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/database_name

# Razorpay Payment Integration - Use PRODUCTION keys in production
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_live_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_live_razorpay_webhook_secret

# Wise Payment Integration (Optional)
WISE_API_KEY=your_wise_api_key_here
WISE_PROFILE_ID=your_wise_profile_id
WISE_WEBHOOK_SECRET=your_wise_webhook_secret_here
WISE_ENVIRONMENT=sandbox

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# Email Configuration
FROM_EMAIL=support@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_NAME=Unitasa
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
ADMIN_PASSWORD=your-admin-password-change-this-in-production
SYSTEM_USER_PASSWORD=your-system-user-password-change-this-in-production

# Test User Credentials (for development/testing only)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
TEST_USER_NAME=Test User
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
ENCRYPTION_PASSWORD=your-encryption-password-change-this-in-production

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Frontend URL (used for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Facebook OAuth Configuration
# Get these from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# Twitter/X OAuth Configuration
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_REDIRECT_URI=http://localhost:3000/auth/twitter/callback

# Additional Social Media API Keys (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_REDIRECT_URI=http://localhost:3000/auth/telegram/callback
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback
BLUESKY_CLIENT_ID=your_bluesky_client_id_here
BLUESKY_CLIENT_SECRET=your_bluesky_client_secret_here
BLUESKY_REDIRECT_URI=http://localhost:3000/auth/bluesky/callback
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_REDIRECT_URI=http://localhost:3000/auth/reddit/callback
PINTEREST_APP_ID=your_pinterest_app_id_here
PINTEREST_APP_SECRET=your_pinterest_app_secret_here
PINTEREST_REDIRECT_URI=http://localhost:3000/auth/pinterest/callback
MASTODON_CLIENT_ID=your_mastodon_client_id_here
MASTODON_CLIENT_SECRET=your_mastodon_client_secret_here
MASTODON_REDIRECT_URI=http://localhost:3000/auth/mastodon/callback
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback
